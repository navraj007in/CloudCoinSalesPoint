
@{
    ViewBag.Title = "Buy";
}

<h2>Buy</h2>
<script type="text/javascript">
    function calcAmount() {
        var qty = $('#floatNumber').val();
        $('#lblAmount').text(qty * 0.1);
    }
</script>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Buy CloudCoins</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-2 control-label">Quantity</div>
        <div class="col-md-10">
            <input id="floatNumber" onchange="calcAmount()" type="number" min="250" max="25000" step="250" value="250" /> 
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            Amount
            </div>
            <div class="col-md-10">
                <label id="lblAmount">24 </label>$
            </div>
        </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Buy" />
        </div>
    </div>
}


